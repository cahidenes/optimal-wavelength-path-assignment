<?xml version="1.0" encoding="UTF-8" ?>
<solver xmlns="https://www.optaplanner.org/xsd/solver"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">
<!--    <moveThreadCount>4</moveThreadCount>-->

<!--    <environmentMode>FULL_ASSERT</environmentMode>-->



    <solutionClass>org.cahid.Network</solutionClass>
    <entityClass>org.cahid.Path</entityClass>

    <scoreDirectorFactory>
        <incrementalScoreCalculatorClass>org.cahid.IncrementalCalculator</incrementalScoreCalculatorClass>
<!--        <easyScoreCalculatorClass>org.cahid.SimpleScoreCalculator</easyScoreCalculatorClass>-->
    </scoreDirectorFactory>

    <termination>
        <terminationCompositionStyle>OR</terminationCompositionStyle>
        <secondsSpentLimit>60</secondsSpentLimit>
        <termination>
            <terminationClass>org.cahid.BestSolutionFound</terminationClass>
        </termination>
    </termination>


    <localSearch>
        <moveListFactory>
            <moveListFactoryClass>org.cahid.moves.MoveFactory</moveListFactoryClass>
        </moveListFactory>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
            <finalistPodiumType>STRATEGIC_OSCILLATION</finalistPodiumType>
        </forager>

    </localSearch>


</solver>